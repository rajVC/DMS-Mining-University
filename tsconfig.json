{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strict": false, // Disable all strict type-checking options
    "noImplicitAny": false, // Allow implicit 'any' type
    "skipLibCheck": true, // Skip type-checking of declaration files
    "esModuleInterop": true, // Allow compatibility with CommonJS-style imports
    "allowJs": true, // Allow JavaScript files in your project
    "checkJs": false, // Disable JavaScript checking
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}